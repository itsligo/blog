@model blog.ViewModels.BlogViewModel
<h2>@ViewBag.Title</h2>
<h4>@Html.DisplayFor(model => model.NumberOfBlogs) Blogs</h4>
<h4>@Model.NumberOfBlogs Blogs</h4>

<table class="table table-striped table-condensed table-hover">
    <tr>
        <th>
        
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Blogs) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogAuthor)
        </td>
        <td>
            @Html.ActionLink("More", "Details", new { id=item.BlogTitle })
        </td>
    </tr>
}

</table>

@model blog.ViewModels.BlogViewModel
@* model above represents the data sent through from the Action method of the Ctrl *@

<div class="alert alert-info">@Html.DisplayFor(model => model.NumberOfBlogs) Blogs w/ @Model.PostCount Posts</div>
@*<h4>@Model.NumberOfBlogs Blogs</h4>*@ @*(Alternative)*@

<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Blogs            </h2>
        </div>
    </div>
</div>

<table class="table table-striped table-condensed table-hover">
    <tr>
        <th>Blog Title</th>
        <th>Author</th>
        <th>
        </th>  @*for control link column*@  
    </tr>

@foreach (var item in Model.Blogs) {
    <tr>
        <td>    @*display the name of the property (i.e. BlogTitle)*@
            @Html.DisplayFor(modelItem => item.BlogTitle)
        </td>
        <td>
            @*display the value of the property (i.e. 'Ode to Code')*@
            @Html.DisplayFor(modelItem => item.BlogAuthor)
        <td>
            @*create a <a> tag to redirect to Details action method *@
            @Html.ActionLink("More", "Details", new { id = item.Id }, new { @class = "btn btn-xs  btn-primary" })
        </td>
    </tr>
}
</table>
